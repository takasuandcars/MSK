<div class="login-form-container">
    <h1>ログイン</h1>

    <div class="login-form">
        <%=form_with(url:login_path, scope: :session, method: :post, local: true) do |f| %>
        
          <%= f.label :email%>
          <%= f.email_field :email, class: 'form-control' %>
    
          <%= f.label :password %>
          <%= f.password_field :password, class: 'form-control' %>
            
        <div class="btn-container">
          <%= f.submit "Log in", class: "btn btn-primary" %>
        </div>
          
         <% end %>
    </div>
    
    <div class="btn admin-btn">
        <%= link_to("管理者としてログイン", login_path({session: {email: "admin@test.com",password: "test"}}), local: true , method: :post)%>
    </div>
    
</div>
